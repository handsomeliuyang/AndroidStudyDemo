<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ly.studydemo">

    <application
        android:name=".LyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".binder.ClientActivity" />

        <activity android:name=".FileActivity"/>

        <activity android:name=".ipsbus.IPCBusActivity"/>

        <provider
            android:authorities="${applicationId}.virtual.service.BinderProvider"
            android:name=".ipsbus.BinderProvider"
            android:exported="false"
            android:process=":x"/>

        <service android:name=".binder.RemoteService"
            android:enabled="true"
            android:process=":remote">
            <intent-filter>
                <action android:name="com.ly.studydemo.binder.IRemoteService"/>
            </intent-filter>
        </service>
    </application>

</manifest>